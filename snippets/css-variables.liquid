<style>
  /* stylelint-disable */
  :root {
      --site-sidth: 1400px;

      /**
        * Colours
      **/

      /* -- Brand -- */
      --c-primary: #006834;
      --c-primary-variant: #004523;
      --c-secondary: #f2f7f4;
      --c-secondary-variant: #ccd1ce;

      /* -- Base -- */
      --c-light: #efefef;
      --c-light-variant: #f7f7f7;
      --c-gray: #666;
      --c-gray-variant: #666;
      --c-dark: #222;
      --c-dark-variant: #333;

      /* -- Context -- */
      --c-info: #0468db;
      --c-info-variant: #b4d2d4;
      --c-success: #5ece7b;
      --c-success-variant: #9ee2b0;
      --c-warning: #ecc713;
      --c-warning-variant: #f6e389;
      --c-danger: #da394c;
      --c-danger-variant: #fcede8;

      /* -- Font Colour -- */
      --c-body: #fff;
      --c-text: #333;
      --c-text-muted: #666;
      --c-text-disabled: #e8e8e8;
      --c-link: #006834;
      --c-link-hover: #004523;
      --c-black: #222;
      --c-white: #fff;

      /* -- Internal -- */
      --_c-orange-primary: #f15a24;
      --_c-orange-secondary: #f79c7c;
      --_c-slate-primary: #404040;
      --_c-slate-secondary: #8c8c8c;
      --_c-green-primary: #5ece7b;
      --_c-green-secondary: #9ee2b0;
      --_c-dark-primary: #1d1f22;
      --_c-dark-secondary: #43464e;
      --_c-gray-primary: #72757e;
      --_c-gray-secondary: #8d8f9a;
      --_c-gray-accent: #e0e0e1;
      --_c-light-primary: #f1f2f3;
      --_c-light-secondary: #fff;
      --_c-red-primary: #d12727;
      --_c-red-secondary: #fcede8;
      --_c-yellow-primary: #ecc713;
      --_c-yellow-secondary: #f6e389;
      --_c-blue-primary: #0468db;
      --_c-blue-secondary: #e1f4fe;

      /**
        * Typography
      **/

      /* -- Font Family -- */
      --font-family-regular: {% if settings.use_regular_custom_font %}{{ settings.regular_custom_font }}{% else %}{{ settings.font_family_regular.family }}, {{ settings.font_family_regular.fallback_families }}{% endif %};

      --font-family-heading: {% if settings.use_heading_custom_font %}{{ settings.heading_custom_font }}{% else %}{{ settings.font_family_heading.family }}, {{ settings.font_family_heading.fallback_families }}{% endif %};
      --font-weight-heading: {{ settings.font_family_heading.weight }};

      /* -- Font Size -- */
      --font-base: {{ settings.regular_font_size }}px; /* 16px */
      --font-2xs: 0.625rem; /* 10px */
      --font-xs: 0.75rem; /* 12px */
      --font-sm: 0.875rem; /* 14px */
      --font-md: 1.125rem; /* 18px */
      --font-lg: 1.25rem; /* 20px */
      --font-xl: 1.5rem; /* 24px */
      --font-xxl: 1.875rem; /* 30px */
      --font-3xl: 2.25rem; /* 36px */

      /* -- Heading Font Size - Mobile -- */
      --h1-font-size: 1.375rem; /* 22px */
      --h2-font-size: 1.125rem; /* 18px */
      --h3-font-size: 1rem; /* 16px */
      --h4-font-size: 0.875rem; /* 14px */
      --h5-font-size: 0.75rem; /* 12px */
      --h6-font-size: 0.75rem; /* 12px */

      /**
        * Layout
      **/

      --site-width: 1200px;

      /* Spacers */
      --spacer-2xs: 0.25rem; /* 4px */
      --spacer-xs: 0.5rem; /* 8px */
      --spacer-sm: 1rem; /* 16px */
      --spacer-m: 1.25rem; /* 20 px */
      --spacer-base: 1.5rem; /* 24 px */
      --spacer-lg: 2rem; /* 32px */
      --spacer-xl: 2.5rem; /* 40px */
      --spacer-2xl: 5rem; /* 80px */
      --spacer-3xl: 10rem; /* 160 px */
  }

  /* -- Heading Font Size - Desktop -- */
  @media (min-width: 800px) {
    :root {
      --h1-font-size: 2.625rem; /* 42px */
      --h2-font-size: 2rem; /* 36px */
      --h3-font-size: 1.625rem; /* 26px */
      --h4-font-size: 1.125rem; /* 18px */
      --h5-font-size: 0.875rem; /* 14px */
      --h6-font-size: 0.625rem; /* 10px */
    }
  }
  /* stylelint-enable */
</style>